---
export interface Props {
  page: number;
  totalPages: number;
  baseUrl: string;
}
const { page = 1, totalPages = 1, baseUrl = "/learnt" } = Astro.props;
---

{
  totalPages > 1 && (
    <nav class="flex justify-center gap-2 my-8" aria-label="Pagination">
      {Array.from({ length: totalPages }, (_, i) => i + 1).map((num) => (
        <a
          href={`${baseUrl}?page=${num}`}
          class={`px-3 py-1 rounded ${num === page ? "bg-blue-600 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-200 hover:bg-blue-100 dark:hover:bg-blue-700"}`}
          aria-current={num === page ? "page" : undefined}
        >
          {num}
        </a>
      ))}
    </nav>
  )
}
