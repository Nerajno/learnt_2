---
export interface Props {
  related: any[];
}
const { related = [] } = Astro.props;
---

{
  related.length > 0 && (
    <section class="mt-12">
      <h2 class="text-xl font-bold mb-4">Related Projects</h2>
      <ul class="grid gap-4 md:grid-cols-2">
        {related.map((project) => (
          <li>
            <a
              href={`/learnt/${project.slug}`}
              class="block p-4 bg-gray-50 dark:bg-gray-800 rounded hover:shadow transition"
            >
              <div class="font-semibold mb-1">{project.name}</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">
                {project.short}
              </div>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )
}
