---
export interface Props {
  tags: string[];
}
const { tags = [] } = Astro.props;
---

<ul class="flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <li>
        <a
          href={`/learnt?tag=${encodeURIComponent(tag)}`}
          class="px-2 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:hover:bg-blue-800 text-xs font-medium transition"
        >
          {tag}
        </a>
      </li>
    ))
  }
</ul>
